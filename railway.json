{
  "$schema": "https://railway.app/railway.schema.json",
  "build": {
    "builder": "NIXPACKS",
    "nixpacksConfig": {
      "providers": ["node"],
      "vars": {
        "NODE_VERSION": "20"
      },
      "buildCmd": "yarn build"
    }
  },
  "deploy": {
    "startCommand": "yarn migration:prod:run && yarn start:prod",
    "restartPolicyType": "ON_FAILURE",
    "restartPolicyMaxRetries": 10
  }
}